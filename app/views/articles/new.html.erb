<p id="notice"><%= notice %></p>

<div class="d-flex align-items-center p-3 my-3 text-white-50 bg-purple rounded box-shadow">
  <img class="mr-3" src="https://getbootstrap.com/assets/brand/bootstrap-outline.svg" alt="" width="48" height="48">
  <div class="lh-100">
    <h6 class="mb-0 text-white lh-100">New Article</h6>
    <small>Informational text here</small>
  </div>
</div>

<div class="my-3 p-4 bg-white rounded box-shadow">
  <h6 class="border-bottom border-gray pb-2 mb-0">
    New Article
  </h6>

  <br/>

  <%= form_with(model: @article, local: true) do |form| %>
    <div class="form-group">
      <small class="text-uppercase text-muted">Title</small>
      <%= form.text_field :title, class: "form-control" %>
    </div>
    <div class="form-group">
      <small class="text-uppercase text-muted">Text</small>
      <%= form.text_area :text, class: "form-control" %>
    </div>
    <hr/>
    <div>
      <%= form.submit "Save", class: 'btn btn-primary' %>
      <%= link_to 'Back', :back, class: 'btn btn-sm btn-link' %>
    </div>
  </form>
<% end %>
